int R = 10;
int Max = 24;

void setup(){
  Serial.begin(9600);
  
  for(int q = 0; q < Max; q++){
    if(q < R){
      Serial.print(q); Serial.println(". Tur başladı");
    }
    else if(q == R - 2){
      continue;
    }
    Serial.println("Arduino c++");
  }
  
}

void loop(){
  // Code usages
}


// continue anahtar kelimesi ne işe yarar? Bu anahtar kelme; bir döngü içindeki işlemler belirli bir koşul desteklendikten veya siz bu anahtar kelimeyi tetikledikten sonra üstündeki yapıları pas geçmesine yani bir nebze "continue" etmesine olanak tanır
